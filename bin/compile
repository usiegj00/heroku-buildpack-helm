#!/bin/sh

# Open build dir
cd $1

if [ ! -s .helm_version ]; then
    echo ".helm_version empty. Skipping."
    exit 0
fi

mkdir custom-bin
mkdir -p .profile.d

HELM_VERSION=`cat .helm_version`
echo "Downloading helm from https://get.helm.sh/helm-$HELM_VERSION-linux-amd64.tar.gz"
wget https://get.helm.sh/helm-$HELM_VERSION-linux-amd64.tar.gz -O- | tar -xz --strip 1 linux-amd64/helm
mv helm custom-bin

echo "export PATH=\$PATH:\$HOME/custom-bin" >> .profile.d/custom_binaries.sh
